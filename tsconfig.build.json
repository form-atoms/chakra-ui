{
  "extends": "./tsconfig",
  "compilerOptions": {
    "isolatedModules": false,
    "composite": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": [
    "src/showcase/*",
    "src/stories/*",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.skip.tsx"
  ]
}
